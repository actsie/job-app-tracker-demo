# Demo Configuration
# Set both to 'true' for demo mode (blocks persistence, emails, webhooks)
DEMO_MODE=true

# Client-side demo detection (must start with NEXT_PUBLIC_)
# IMPORTANT: Set this to 'true' on Render for demo banner to show
NEXT_PUBLIC_DEMO_MODE=true

# Upload Limits (demo-safe defaults)
MAX_UPLOAD_FILES=10
MAX_FILE_SIZE_MB=5
ALLOWED_EXTENSIONS=pdf,docx,txt

# Demo Data Configuration
DEMO_DATA_SEED=42
DEMO_SESSION_TIMEOUT=3600000

# Production Configuration (ignored in demo mode)
DATABASE_URL=sqlite:./data/tracker.db
ENABLE_WEBHOOKS=false
ENABLE_EMAIL_NOTIFICATIONS=false